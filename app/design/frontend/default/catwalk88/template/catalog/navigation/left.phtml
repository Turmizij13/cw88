/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
/* @var $this  Mage_Catalog_Block_Navigation */
?>
<?php if (!Mage::registry('current_category')) return ?>
<?php $_categories = $this->getStoreCategories() ?>
<?php $_count = is_array($_categories)?count($_categories):$_categories->count(); ?>
<?php if($_count): ?>
<div class="block">
    <div class="block-title">
        <strong><span><?php echo $this->__('All Categories') ?></span></strong>
    </div>
    <div class="block-content left-category-navigation">
    	<ul class="nav-wrapper">
        <?php echo $this->renderCategoriesMenuHtml()?>
        </ul>
    </div>
</div>
<?php endif; ?>
<script type="text/javascript" language="javascript" charset="utf-8">
	(function($){
		$('.nav-wrapper li.parent div>i').click(function(){
			$(this).toggleClass('expand');
			if(!$(this).hasClass('expand')){
				$(this).parent('div').next('ul').hide();
			}else{
				$(this).parent('div').next('ul').show();
			}
		});
	})(jQuery);
</script>